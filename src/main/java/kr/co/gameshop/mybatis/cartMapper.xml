<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Cart">

	<!-- 장바구니 조회 -->
	<select id="selectAll" parameterType="String" resultType="Cart">
		select game_title, game_img, game_price 
		from game  
		where game_id=(select game_id from cart where mem_id=#{mem_id});
	</select>
	
	<!-- 장바구니 추가 -->
	<insert id="insert" parameterType="Cart">
		insert cart(game_id, mem_id) values(#{game_id},#{mem_id})
	</insert>
	
	<!-- 장바구니 상품 1개 삭제 -->
	<delete id="delete" parameterType="Cart">
		delete from cart where mem_id=#{mem_id} and game_id=#{game_id}
	</delete>
	
	<!-- 장바구니 비우기 -->
	<delete id="deleteAll" parameterType="int">
		delete from cart where mem_id=#{mem_id}
	</delete>
</mapper>